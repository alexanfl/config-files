# output: ÔÅ≥ Sun, 05.03.2017
[date]
command=~/.local/share/i3blocks-modules/date -f "ÔÅ≥ {time}" -t "%a, %d.%m.%Y"
interval=60
markup=pango

[SEPARATOR]
color=#666666

# output: ÔÄó 14:36
[time]
command=~/.local/share/i3blocks-modules/date -f "ÔÄó {time}" -t "%H:%M"
interval=5
markup=pango

[SEPARATOR]
color=#666666

[keyboard layout]
command=setxkbmap -print | awk -F"+" '/xkb_symbols/ {print $2}'
