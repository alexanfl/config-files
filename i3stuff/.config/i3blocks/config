[pomodoro]
command=if [ $button ] && [[ $(/usr/bin/i3-gnome-pomodoro status) ]]; then /usr/bin/i3-gnome-pomodoro toggle && /usr/bin/i3-gnome-pomodoro status; elif [ $button ] && [[ ! $(/usr/bin/i3-gnome-pomodoro status) ]]; then /usr/bin/i3-gnome-pomodoro start && /usr/bin/i3-gnome-pomodoro status; else { A=$(/usr/bin/i3-gnome-pomodoro status); [[ $A ]] && echo "üçÖ $A" || echo "üçÖ Pomodoro"; }; fi
interval=1
markup=pango
color=#999999

[SEPARATOR]
color=#666666

[memory]
command=~/.local/share/i3blocks-modules/memory -f "Ôãõ {used} {uunit}iB / {total} {tunit}iB ({pused} %)" -tg '{pfree}' '<' 70 -ti '{pfree}' '<' 50 -tw '{pfree}' '<' 35 -tc '{pfree}' '<' 20
interval=1
markup=pango

[SEPARATOR]
color=#666666

# output: ÔÇ† used GiB / total GiB (10%)
# show 'warn color' when disk space is less than 20%
# show 'crit color' when disk space is less than 10%
[disk]
command=~/.local/share/i3blocks-modules/disk -f "ÔÇ† {used} {uunit}iB / {total} {tunit}iB ({pused}%)" -ti '{pfree}' '<' 35 -tc '{pfree}' '<' 15
instance=/
interval=60
markup=pango

[SEPARATOR]
color=#666666

# output discharging:  ÔâÉ 31% (01:50)
# output charging:     ‚ö° 31% (00:23)
# output full:         ÔâÄ 100% (08:32)
# output full with ac: ‚ö° 100%
# output full with ac (alt.): charge plug
# shows 'good color' when fully charged
# shows 'warn color' when remaining percentage is below 30%
# shows 'crit color' when remaining percentage is below 10%
# shows different icons depending on remaining percent
# shows different icon for charging and discharging
[battery]
color=#666666
command=python ~/.config/i3blocks/battery.py
#command=~/.local/share/i3blocks-modules/battery -fe '{percent}' '<' 90 'ÔâÅ {percent}% ({time})' -fe '{percent}' '<' 75 'ÔâÇ {percent}% ({time})' -fe '{percent}' '<' 60 'ÔâÇ {percent}% ({time})' -fe '{percent}' '<' 35 'ÔâÉ {percent}% ({time})' -fe '{percent}' '<' 5 'ÔâÑ {percent}% ({time})' -fe '{status}' '=' '^charging' '‚ö° {percent}% ({time})' -fe '{status}' '=' 'full' 'ÔâÄ {percent}% ' -fe '{status}' '=' 'not' '‚ö° 100%' -tg '{status}' '=' 'full' -tg '{percent}' '=' 100 -ti '{status}' '=' '^charging' -tw '{percent}' '<' 30 -tc '{percent}' '<' 5
#instance=Battery 0
interval=60
markup=pango

[SEPARATOR]
color=#666666

# Note: Set instance to your wifi interface
# Note: interval specifies how often the module should be updated (in seconds)
#       So in this example, it will be updated every 2 seconds.
[wifi]
command=python ~/.config/i3blocks/wifi.py
interval=2
markup=pango

[ethernet]
label=/ 
command=python ~/.config/i3blocks/ethernet.py
markup=pango
interval=10

[SEPARATOR]
color=#666666

# output: ‚òº 100%
[backlight]
